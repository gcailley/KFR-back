<rss xmlns:dc="http://purl.org/dc/elements/1.1/" version="2.0">
    <channel>
        <title>{{info.title}}</title>
        <link>{{info.url}}</link>
        <description><![CDATA[{{info.description}}]]></description>
        <language>fr</language>
        <docs>http://www.rssboard.org/rss-specification</docs>
        <pubDate>{{info.publication}}</pubDate>
        <webMaster>{{info.email}}</webMaster>
        <image>
            <title>{{info.title}}</title>
            <url>{{info.image_url}}</url>
            <link>{{info.url}}</link>
        </image>
        {% for item in items %}
        <item>
            <link>{{info.url}}</link>
            <author>{{info.author}}</author>
            <dc:creator>RSS {{info.author}}</dc:creator>
            <guid isPermaLink="false">{{ item.id }}</guid>
            <title><![CDATA[{{ item.title }}]]></title>
            <description><![CDATA[{{ item.description }}]]></description>
            <pubDate>{{ item.dateCreation|date("r") }}</pubDate>
        </item>
        {% endfor %}
    </channel>
</rss>